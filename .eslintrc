{
  "env": {
    "es6": true,
    "browser": true,
  },
  "extends": [
    "eslint:recommended"
  ],
  "globals": {
    "DEBUG": false,
    "$": false,
    "angular": false,
    "jQuery": false,
    "Linear": false,
    "Modernizr": false,
    "ScrollMagic": false,
    "Sys": false,
    "TimelineMax": false,
    "Toolkit": false,
    "TweenMax": false,
    "videojs": false,
    "YT": false
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "rules": {
    "arrow-body-style": ["error", "as-needed"],
    "class-methods-use-this": "off",
    "global-require": "off",
    "import/extensions": "off",
    "import/no-unresolved": "off",
    "import/no-extraneous-dependencies": "off",
    "import/prefer-default-export": "off",
    "linebreak-style": "off",
    "max-len": ["warn", 100],
    "no-debugger": "warn",
    "no-restricted-syntax": "warn",
    "no-param-reassign": "off",
    "no-use-before-define": [
      "error",
      {
        "functions": false,
        "classes": true
      }
    ],
    "strict": 0
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "tasks/webpack.config.js"
      }
    }
  }
}
